<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_selected_doc"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/iv"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="COA UT Paper"
            android:letterSpacing="0.03"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroybold"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv"
            android:maxLines="2"
            android:layout_below="@id/tvTitle"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:text="Subject"
            android:letterSpacing="0.03"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/gilroymedium"
            android:textColor="#80000000"
            android:layout_marginEnd="16dp"
            android:textSize="13dp"/>
        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_lib"
            android:layout_toRightOf="@+id/iv"
            android:layout_below="@+id/tvSubject"
            android:layout_marginTop="6dp"/>
        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_download_lib"
            android:layout_toRightOf="@+id/ivBookmark"
            android:layout_below="@+id/tvSubject"
            android:layout_marginTop="6dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>