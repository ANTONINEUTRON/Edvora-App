<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="#234"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/who_are_you"
            android:layout_width="108dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gilroymedium"
            android:gravity="top"
            android:text="Who are you?"
            android:textColor="#263238"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:textColor="#263238"
            android:layout_marginRight="16dp"
            android:textAllCaps="false"
            android:background="@drawable/selector_et"
            android:drawableStart="@drawable/ic_inactive_student"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gilroymedium"
            android:text="I am Student"
            android:paddingStart="10dp"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/btnTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="112dp"
            android:textAllCaps="false"
            android:layout_marginRight="16dp"
            android:background="@drawable/selector_et"
            android:drawableStart="@drawable/ic_inactive_teacher"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gilroymedium"
            android:text="I am Faculty"
            android:textColor="#263238"
            android:paddingStart="10dp"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTeacher"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gilroymedium"
            android:gravity="top"
            android:padding="14dp"
            android:text="Done"
            android:textColor="#757575"
            android:textSize="16dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>