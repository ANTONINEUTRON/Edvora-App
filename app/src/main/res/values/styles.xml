<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="DialogAnimations" />
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/white</item>
        <item name="fontFamily">@font/gilroybold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="bottombar">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/gilroybold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="tab_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gilroymedium</item>

    </style>
</resources>